{
  "manifest_version": 3,
  "name": "YouTube without Shorts",
  "version": "1.0",
  "description": "Removes YouTube Shorts entirely from Chromium-based browsers",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "Icons/icon.png"
  }
}
  
